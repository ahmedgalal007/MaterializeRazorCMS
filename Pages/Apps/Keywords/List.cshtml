@page
@model AspnetCoreStarter.Pages.Apps.Keywords.KeywordModel
@using AspnetCoreStarter.Helpers;
@using AspnetCoreStarter.Models;
@using AspnetCoreStarter.Entities;
@using System.Text.Json

@{
	ViewData["Title"] = "Keywords";
}

